# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI
OPENAI_API_KEY=your_openai_api_key
# Optional overrides for deployment tuning
OPENAI_NOTES_MODEL=gpt-5-nano
OPENAI_NOTES_MAX_TOKENS=2000
# Timeout in milliseconds (30000ms = 30s, which is Netlify's maximum for standard plans)
OPENAI_NOTES_TIMEOUT_MS=28000
# Maximum number of retry attempts for failed API calls
OPENAI_NOTES_MAX_ATTEMPTS=2
OPENAI_NOTES_TEMPERATURE=1.0

# Optional: Set to 'development' for local development
NODE_ENV=development
